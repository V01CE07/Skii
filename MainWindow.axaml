<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="1280" MaxHeight="720" Height="720"
		MinHeight="720" MaxWidth="1280" MinWidth="1280"
        x:Class="skiing.MainWindow"
		x:CompileBindings="False"
		WindowStartupLocation="CenterOwner"
        Title="Окно входа">
		
    <Grid>
		<TextBlock Text="Добро пожаловать!" HorizontalAlignment="Center" Margin="200"
				   FontSize="20">
			
		</TextBlock>
		<TextBox Watermark="Логин" HorizontalAlignment="Center" VerticalAlignment="Center"
				 Height="" Width="250" FontSize="16" Margin="0 0 0 200" BorderBrush="Black"
				 Name="loginBox">			
		</TextBox>
		<TextBox Watermark="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center"
				 Height="" Width="250" FontSize="16" Margin="0 0 0 100" BorderBrush="Black"
				 Name="passwordBox" PasswordChar="•">
		</TextBox>
		<Button HorizontalAlignment="Center" VerticalAlignment="Center" 
				Height="30" Width="140" Margin="0 50 0 0" Background="Transparent"
				Content="Показать пароль" HorizontalContentAlignment="Center" BorderBrush="Black"
				Click="ShowPassword" Name="passwordShow">			
		</Button>
		<Button HorizontalAlignment="Center" VerticalAlignment="Center"
				Height="30" Width="100" Margin="0 200 0 0" Background="Transparent"
				Content="Вход" HorizontalContentAlignment="Center" BorderBrush="Black"
				Click="LoginButton" Name="logBtn">
		</Button>
		<TextBlock x:Name="errorText" HorizontalAlignment="Center" VerticalAlignment="Center"
				   Text="" Margin="0 400 0 0" FontSize="25">
			
		</TextBlock>
    </Grid>
</Window>
